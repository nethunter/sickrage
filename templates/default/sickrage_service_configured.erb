. /etc/init.d/functions

RETVAL=0
prog="sickrage"

start() {
        echo -n "Starting $prog: "
        `<%= node['sickrage']['python']['binary'] %> <%= node['sickrage']['binary'] %> --daemon -p <%= node['sickrage']['listen_port'] %> pidfile=/var/run/sickbeard/sickbeard.pid --datadir=<%= node['sickrage']['data_dir'] %>`
        RETVAL=$?
        [ $RETVAL -eq 0 ] && touch $LOCKFILE
        echo
        return $RETVAL
}

stop() {
        echo -n "Shutting down $prog: "
        pid=`ps -ef |grep -i sick |grep -v grep |cut -d ' ' -f6`
        kill -9 $pid
        RETVAL=$?
        [ $RETVAL -eq 0 ] && rm -f $LOCKFILE
        echo
        return $RETVAL
}

status() {
        echo -n "Checking $prog status:"
        echo
        sickrage=`ps -ef |grep -i sick |grep -v grep |cut -d '/' -f7`
        SR=`echo $sickrage |cut -d ' ' -f1`
        if [ "$SR" == "sickbeard" ]
        then
          echo "The sickrage service is running"
        else
          echo "The sickrage service is not running"
        fi
        RETVAL=$?
        return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status
        ;;
    restart)
        stop
        sleep 3
        start
        ;;
    *)
        echo "Usage: $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
exit $RETVAL